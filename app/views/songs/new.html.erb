<h1>Create a Song</h1>

<%= form_with model: @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <h2>Song Notes</h2>
  <label for="song_notes_1">1. </label>
  <input id="song_notes_1" name="song[note_contents][]">
  <br />

  <label for="song_notes_2">2. </label>
  <input id="song_notes_2" name="song[note_contents][]">
  <br />

  <%= f.submit %>
<% end %>
