<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :artist_name, "Artist Name" %>
  <%= f.text_field  :artist_name %>
 
  <br />

  <%= f.label :title %>
  <%= f.text_field :title %>

  <br />

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, @genres, :id, :name %>

  <br/>

  <%= f.fields_for :notes do |notes_fields| %>
    <%= notes_fields.label :note %>
    <%= notes_fields.text_field :content%>
  <% end %>

  <%= f.submit %>
<% end %>
